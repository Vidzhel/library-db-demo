{
  "ConnectionStrings": {
    "SqlServerAdmin": "Server=${DB_HOST},${DB_PORT};User Id=${SA_USER};Password=${SA_PASSWORD};TrustServerCertificate=True;",
    "LibraryDb": "Server=${DB_HOST},${DB_PORT};Database=${DB_NAME};User Id=${APP_USER};Password=${APP_PASSWORD};TrustServerCertificate=True;"
  },
  "Database": {
    "Name": "${DB_NAME}",
    "MigrationsPath": "migrations",
    "CommandTimeout": 30,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}
